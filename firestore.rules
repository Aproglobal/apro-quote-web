// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function authed() { return request.auth != null; }

    match /quotes/{id} {
      allow read, write: if authed();
    }
    match /counters/{yy} {
      allow read, write: if authed();
    }
  }
}
